{
  "manifest_version": 2,
  "name": "Perplexity TOC",
  "version": "1.9",
  "description": "Adds a Table of Contents to Perplexity.AI",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "*://www.perplexity.ai/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.perplexity.ai/*"],
      "js": ["code.js"],
      "css": ["code.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "pplxtoc@aosl.jb"
    }
  }
}